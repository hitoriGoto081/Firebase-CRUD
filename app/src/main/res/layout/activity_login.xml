<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLogin"
        android:text="@string/login"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/undipaLogo"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvLogin"
        android:layout_centerHorizontal="true"
        android:src="@drawable/undipa"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/LogUsername"
        android:hint="@string/username"
        android:layout_below="@+id/undipaLogo"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:inputType="text"
        android:autofillHints="Username" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/LogNim"
        android:hint="@string/nim"
        android:layout_below="@+id/LogUsername"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:inputType="text"
        android:autofillHints="Nim" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/LogJurusan"
        android:hint="@string/jurusan"
        android:layout_below="@+id/LogNim"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:inputType="text"
        android:autofillHints="Jurusan" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/LogGender"
        android:hint="@string/gender"
        android:layout_below="@+id/LogJurusan"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:inputType="text"
        android:autofillHints="gender"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegis"
        android:layout_below="@+id/LogGender"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btnLogin"
        android:text="@string/register"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/LogGender"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        android:text="@string/btn_login"/>
</RelativeLayout>